@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cabeçalho da página -->
<section class="content-header">
    <h1>
        Relatórios
        <small>Painel de controle</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-pie-chart"></i> Home</a></li>
        <li class="active">Relatórios</li>
    </ol>
</section>

<!-- Conteúdo principal -->
<section class="content">
    <!-- Box padrão -->
    <div class="box">
        <div class="box-body">



            <div class="col-md-12">
                <div class="box box-default box-solid">
                    <div class="box-header with-border">
                        <label class="box-title" style="font-size: 15px;">Processos</label>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" collapse="1" ignore="1">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body" style="">

                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-aqua">
                                <div class="inner">
                                    <h3>6</h3>

                                    <p>Processos</p>
                                </div>
                                <div class="icon">
                                    <i class="fa ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    Mais informações <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>

                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-green">
                                <div class="inner">
                                    <h3>2<sup style="font-size: 20px"></sup></h3>

                                    <p>Processos concluídos</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    Mais informações <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>

                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-yellow">
                                <div class="inner">
                                    <h3>2</h3>

                                    <p>Processos em andamento</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    Mais informações <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>

                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-red">
                                <div class="inner">
                                    <h3>2</h3>

                                    <p>Processos cancelados</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    Mais informações <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="box box-default box-solid">
                    <div class="box-header with-border">
                        <label class="box-title" style="font-size: 15px;">Alunos</label>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" collapse="1" ignore="1">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body" style="">

                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-aqua">
                                <div class="inner">
                                    <h3>6</h3>

                                    <p>Alunos</p>
                                </div>
                                <div class="icon">
                                    <i class="fa ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    Mais informações <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>

                        <div class="col-lg-3 col-xs-6">
                            <!-- small box -->
                            <div class="small-box bg-green">
                                <div class="inner">
                                    <h3>5<sup style="font-size: 20px"></sup></h3>

                                    <p>Alunos ativos</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                                <a href="#" class="small-box-footer">
                                    Mais informações <i class="fa fa-arrow-circle-right"></i>
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
            </div>





        </div>
        @*<div class="box-footer">
                Footer
            </div>*@
    </div>
</section>
